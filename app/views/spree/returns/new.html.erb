<%= form_for :item_return, url: main_app.order_returns_path(@order.id, line_item_id: @line_item), method: :post do |f| %>
  <fieldset data-hook="new_image">
    <div data-hook="admin_image_form_fields" class="row">
      <div class="col-md-6">
        <div data-hook="file" class="form-group">
          <%= label_tag 'return_at' %>
          <%= select_tag 'return_at', options_for_select(%w(7am-9am 3pm-6pm 6pm-9pm), prompt: 'Select delivery time') %>
        </div>
      </div>
    </div>
    

    <div class="form-actions" data-hook="buttons">
      <%= f.submit 'Request return' %>
    </div>
  </fieldset>
<% end %>


 